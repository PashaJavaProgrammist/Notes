<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/btMake"
        style="@style/land_camera_dialog_button_style"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:drawableStart="@android:drawable/ic_menu_camera"
        android:text="@string/make_photo_from_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btAdd"
        style="@style/land_camera_dialog_button_style"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:drawableStart="@android:drawable/ic_menu_add"
        android:text="@string/add_photo_from_file_system"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btMake" />

    <TextView
        android:id="@+id/btShow"
        style="@style/land_camera_dialog_button_style"
        android:drawableLeft="@android:drawable/ic_menu_gallery"
        android:drawableStart="@android:drawable/ic_menu_gallery"
        android:text="@string/show_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btMake"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btDeletePhoto"
        style="@style/land_camera_dialog_button_style"
        android:drawableLeft="@android:drawable/ic_menu_delete"
        android:drawableStart="@android:drawable/ic_menu_delete"
        android:text="@string/delete_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btAdd"
        app:layout_constraintTop_toBottomOf="@+id/btShow" />

    <TextView
        android:id="@+id/btExit"
        style="@style/land_camera_dialog_button_style"
        android:layout_width="match_parent"
        android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
        android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
        android:text="@string/exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btAdd" />

</android.support.constraint.ConstraintLayout>