<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_green_light</item>
        <item name="colorPrimaryDark">@android:color/holo_green_dark</item>
        <item name="colorAccent">@android:color/holo_green_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StatefulButtonRoundedBorder">
        <item name="android:textColor">@drawable/confirmation_button_text_color_selector</item>
        <item name="android:background">@drawable/confirmation_button_background_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/button_accept_left_padding</item>
        <item name="android:paddingTop">@dimen/button_accept_top_padding</item>
        <item name="android:paddingRight">@dimen/button_accept_right_padding</item>
        <item name="android:paddingBottom">@dimen/button_accept_bottom_padding</item>
    </style>

    <style name="StatefulButtonRoundedBorder.ReverseStates">
        <item name="android:textColor">@drawable/button_text_color_selector_reversed</item>
        <item name="android:background">@drawable/button_background_selector_reversed</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="card_view_notes_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="aboutTV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
    </style>

    <style name="dialog_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
    </style>

    <style name="edittext_dialog_style">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="camera_dialog_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="change_delete_dialog">
        <item name="android:background">@android:color/holo_green_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
